.card
  - cache course do
    - if course.new?
      .ribbon-wrapper
        .ribbon NEW
    .card-image
      %img{:alt => "", :src => 'https://i.vimeocdn.com/video/491672516_295x166.jpg'}
    .card-header
      = link_to course.name, course_path(course), id: course.id
      / = link_to 'Edit', edit_course_lesson_path(course, lesson)
    .card-copy
      %p
        #{course.description.truncate(310)}
      %p.right
        - if current_course_customer?(course)
          = link_to 'Go to Lessons',  course_lessons_path(course), class: 'btn'
        - else
          = link_to 'Read more', course, class: 'btn'
    .card-stats
      %ul
        %li
          = course.lessons.count
          %span Lessons
        %li
          = course.level
          %span Experience
        %li
          = course.programming_language
          %span Language